<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.guyard.meetme" >

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:layoutDirection="ltr"
        android:supportsRtl="false"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity"
            android:layoutDirection="ltr">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CalendarViewer"
            android:layoutDirection="ltr">
        </activity>
        <activity
            android:name=".EventsCalendar"
            android:label="@string/title_activity_events_calendar"
            android:layoutDirection="ltr"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".AddNewEventActivity"
            android:layoutDirection="ltr">
        </activity>
        <activity android:name=".DayViewer"
            android:layoutDirection="ltr">
        </activity>
    </application>

</manifest>
