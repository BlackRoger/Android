<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.meetme.meetme" >

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".hash"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:layoutDirection="ltr"
        android:supportsRtl="false"
        android:theme="@style/AppTheme" >

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>

        <activity
            android:name=".mainScreen_with_drawer"
            android:label="@string/title_activity_main_screen_with_drawer"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".FriendsScrollingActivity"
            android:label="@string/title_activity_friends_scrolling"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".FriendList"
            android:label="@string/title_activity_friend_list"
            android:theme="@style/AppTheme" >
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable" />

        </activity>
        <activity
            android:name=".SearchResultsActivity"  >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>

        <activity
            android:name=".EventsCalendar"
            android:label="@string/title_activity_events_calendar"
            android:layoutDirection="ltr"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".AddNewEventActivity"
            android:layoutDirection="ltr">
        </activity>
        <activity android:name=".DayViewer"
            android:layoutDirection="ltr">
        </activity>
    </application>

</manifest>
